{
  "compilerOptions": {
    "target": "esnext", // Target ECMAScript version
    "lib": [
      "dom",
      "dom.iterable",
      "esnext" // Support for modern ECMAScript features
    ],
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable strict type-checking options
    "noEmit": true, // Do not emit output files
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Use the latest module system
    "moduleResolution": "node", // Use Node.js module resolution
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensure all files can be transpiled independently
    "jsx": "preserve", // Keep JSX as part of the output
    "plugins": [
      {
        "name": "next" // Enable Next.js TypeScript plugin
      }
    ],
    "paths": {
      "@/*": [
        "./*" // Map '@' to the root directory
      ]
    },
    "incremental": true // Enable incremental compilation for faster builds
  },
  "include": [
    "next-env.d.ts", // Include Next.js type definitions
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript JSX files
    ".next/types/**/*.ts" // Include TypeScript definitions from the .next directory
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}
